<html>
    <head>
        <title>
            <%= locals.title %>
        </title>
        <style>
            body {
                margin: 0;
                padding : 0;
                background: cornsilk;
            }
            h1{
                text-align :center;
            }

            .form-container {
                width: 400px;
                height: 500px;
               
            }
            .form-container h2 {
                text-align: center;
            }
            .form-container form{
                display: flex;
                flex-direction: column;
                justify-content: center;
                
                
            }
            .form-container form input {
                margin: 10px;
            }
            .form-container form textarea {
                width : 380px;
                margin-left: 10px;
            }
            .form-container form button {
                margin : 10px;
                padding : .5rem;
                font-size: 15px;
                background-color: aquamarine;
                border-radius: 10rem;
            }
            
        </style>
    </head>
    <body>

        <h1 >Home Page rendering through <b style="color : rgb(230, 18, 18)">API</b> </h1>

        <div class="form-container">
            <h2>Fill Form</h2>
            <form action="/create" method="post">
                <input type="text" name="name" placeholder="Enter the Name" required>
                <input type="email" name="email" placeholder="Enter your email" required>
                <textarea name="para" id="para" cols="30" rows="10" placeholder="Drop Message Here!!"></textarea>
                <button type="submit">Submit</button>
            </form>
        </div>

    </body>
</html>